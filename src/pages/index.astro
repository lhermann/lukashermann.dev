---
import Layout from '../layouts/Layout.astro';
import EmailObfuscate from '../components/EmailObfuscate.astro'
import ArticleList from '../components/ArticleList.astro'
import Timeline from '../components/Timeline.astro'
import FaIcon from '../components/FaIcon.astro'
import { faSquareEnvelope } from '@fortawesome/free-solid-svg-icons'
import { faSquareTwitter, faSquareGithub, faLinkedin } from '@fortawesome/free-brands-svg-icons'
import type { Article } from '../types/Article.ts'

// Fetch articles using eager glob
const articles = Object.values(import.meta.glob('./writing/*.md', { eager: true })) as Article[]
